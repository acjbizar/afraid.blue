{%- set width = 0 %}
{%- set height = 1000 %}
{%- set x = 0 %}
{%- for blue in blues %}
    {%- set width = width + blue.users %}
{%- endfor %}
<svg viewBox="0 0 {{ width }} {{ width }}" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg">
        {%- for blue in blues %}
                <rect fill="{{ blue.color }}" x="{{ x }}" y="0" height="{{ width }}" width="{{ blue.users }}"/>
                {%- set x = x + blue.users %}
        {%- endfor %}
</svg>